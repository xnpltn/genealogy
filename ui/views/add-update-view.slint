                    }
                }

                GroupBox {
                    title: "Family Information";
                    VerticalLayout {
                        spacing: 10px;
                        HorizontalLayout {
                            alignment: space-around;
                            CustomButton {
                                height: 40px;
                                width: 120px;
                                title: @tr("Add Mother");
                            }

                            CustomButton {
                                height: 40px;
                                width: 120px;
                                title: @tr("Add Father");
                            }
                        }

                        HorizontalLayout {
                            spacing: 10px;
                            StandardTableView {
                                columns: [{ title: "Name" }, { title: "Born" }];
                                rows: [
                                    [{ text:"Sister Hotty" }, { text: "4-5-2023" }],
                                    [{ text: "Brother Bob Thorton" }, { text: "6-3-2024" }],
                                ];
                            }

                            StandardTableView {
                                columns: [{ title: "Name" }, { title: "Born" }];
                                rows: [
                                    [{ text:"Henrietta Hotty" }, { text: "4-5-2023" }],
                                    [{ text: "Billy Bob Thorton" }, { text: "6-3-2024" }],
                                ];
                            }
                        }

                        HorizontalLayout {
                            alignment: space-around;

                            CustomButton {
                                height: 40px;
                                width: 120px;
                                title: @tr("Pin/Unpin record");
                            }

                            CustomButton {
                                title: @tr("Delete Record");
                                background: #bf616a;
                            }
                        }
                    }
                }
            }
        }
    }
}

  
