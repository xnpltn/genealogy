import { CustomButton } from "../components/button.slint";
import { Button, CheckBox, Switch, HorizontalBox, LineEdit, GroupBox, ComboBox, DatePickerPopup, VerticalBox, Palette, StandardTableView , ScrollView, TextEdit} from "std-widgets.slint";
import { TableData , Relative} from "../types.slint";

export component Header inherits Rectangle {
    in-out property <bool> dark-mode;
    in-out property <string> title;
    y: 0px;
    height: 60px;
    background: Palette.color-scheme == ColorScheme.dark ? #2e3440 : #eceff4;

    HorizontalLayout {
        padding: 10px;
        alignment: space-between;
        Rectangle {
            Text {
                text: title;
                font-size: 24px;
                font-weight: 700;
                color: Palette.color-scheme == ColorScheme.dark ? #eceff4 : #2e3440;
            }
        }

        HorizontalLayout {
            spacing: 10px;
            alignment: end;
            Button {
                text: "Settings";
                height: 36px;
            }

            Button {
                text: "About";
                height: 36px;
            }
        }
    }
}

export component AddView inherits Rectangle {
    in-out property <Relative> relative;
