                                        { title: "age" },
                                        { title: "phone" },
                                    ];
                                    rows: TableData.males;
                                    current-row-changed(i) => {
                                        TableData.selected-father-id = i;
                                    }
                                }
                            }
                        }

              /*
                        HorizontalBox {
                            Rectangle {
                                Rectangle {
                                    height: 100%;
                                    width: 100%;
                                    border-radius: 5px;
                                    background: Palette.color-scheme == ColorScheme.dark ? #4c566a : #d8dee9;
                                    note := TextEdit {
                                        text: "Image";
                                    }
                                }
                            }
                        }
              */



                        HorizontalBox {
                            Button {
                                text: "Save";
                                clicked => {
                                    relative = {
                                        first-name: first-name.text,
                                        middle-name: middle-name.text,
                                        last-name: last-name.text,
                                        sex: sex.text,
                                        phone: phone.text,
                                        email: email.text,
                                        birthday: birthday.text,
                                        lost-reason: lost.text,
                                        sameness: sameness.text,
                                        pinned: pinned.checked,
                                    };
                                    TableData.create-new-relative(relative)
                                }
                            }
                        }

                        HorizontalBox {
                            Rectangle {
                                height: 100px;
                                width: 100px;
                                border-radius: 5px;
                                background: Palette.color-scheme == ColorScheme.dark ? #4c566a : #d8dee9;
                                Text {
                                    text: "Image";
                                    color: Palette.color-scheme == ColorScheme.dark ? #eceff4 : #2e3440;
                                }
                            }

                            CustomButton {
                                title: "Upload Photo";
